<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vizibble | Login</title>
    <link rel="stylesheet" href="/CSS/output.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600;700&display=swap"
        rel="stylesheet">
    <style>
        * {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
        }

        .mono-font {
            font-family: 'JetBrains Mono', monospace;
        }
    </style>
</head>

<body>
    <div>
        <div
            class="flex justify-center items-center bg-gradient-to-br from-blue-900 to-blue-800 px-4 py-6 min-h-screen">
            <div
                class="bg-white shadow-[0_2px_22px_-4px_rgba(59,130,246,0.2)] max-md:mx-auto p-6 border border-blue-300 rounded-lg max-w-md">
                <form class="space-y-4" method="post" action="/">
                    <div class="mb-8">
                        <h3 class="font-extrabold text-3xl">
                            Welcome!
                        </h3>
                        <p class="mt-4 text-sm leading-relaxed">
                            Enter email and password to login to your account.
                        </p>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm" for="email">
                            Username
                        </label>
                        <div class="relative flex items-center">
                            <input name="email" id="email" required class="px-4 py-3 border rounded-lg w-full text-sm"
                                placeholder="Enter email" />
                            <svg xmlns="http://www.w3.org/2000/svg" fill="#000000" stroke="#000000"
                                class="right-4 absolute w-[18px] h-[18px]" viewBox="0 0 24 24">
                                <circle cx="10" cy="7" r="6"></circle>
                                <path
                                    d="M14 15H6a5 5 0 0 0-5 5 3 3 0 0 0 3 3h12a3 3 0 0 0 3-3 5 5 0 0 0-5-5zm8-4h-2.59l.3-.29a1 1 0 0 0-1.42-1.42l-2 2a1 1 0 0 0 0 1.42l2 2a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42l-.3-.29H22a1 1 0 0 0 0-2z">
                                </path>
                            </svg>
                        </div>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm" for="password">
                            Password
                        </label>
                        <div class="relative flex items-center">
                            <input name="password" type="password" id="password" required
                                class="px-4 py-3 border rounded-lg w-full text-sm" placeholder="Enter password" />
                            <svg xmlns="http://www.w3.org/2000/svg" fill="#000000" stroke="#000000"
                                class="right-4 absolute w-[18px] h-[18px] cursor-pointer" viewBox="0 0 128 128"
                                id="view-password">
                                <path
                                    d="M64 104C22.127 104 1.367 67.496.504 65.943a4 4 0 0 1 0-3.887C1.367 60.504 22.127 24 64 24s62.633 36.504 63.496 38.057a4 4 0 0 1 0 3.887C126.633 67.496 105.873 104 64 104zM8.707 63.994C13.465 71.205 32.146 96 64 96c31.955 0 50.553-24.775 55.293-31.994C114.535 56.795 95.854 32 64 32 32.045 32 13.447 56.775 8.707 63.994zM64 88c-13.234 0-24-10.766-24-24s10.766-24 24-24 24 10.766 24 24-10.766 24-24 24zm0-40c-8.822 0-16 7.178-16 16s7.178 16 16 16 16-7.178 16-16-7.178-16-16-16z">
                                </path>
                            </svg>
                        </div>
                    </div>

                    <div class="!mt-8">
                        <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 shadow-xl px-4 py-3 rounded-lg focus:outline-none w-full text-white text-sm tracking-wide">
                            Get access
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const password_input_box = document.getElementById("password");
        const view_password_eye = document.getElementById("view-password");
        view_password_eye.addEventListener('click', () => {
            password_input_box.type = password_input_box.type === 'password' ? 'text' : 'password';
            password_input_box.focus();
        })
    </script>
</body>

</html>