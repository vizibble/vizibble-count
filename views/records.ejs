<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vizibble | Records</title>
    <link href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/CSS/output.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600;700&display=swap"
        rel="stylesheet">
    <style>
        * {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
        }

        .mono-font {
            font-family: 'JetBrains Mono', monospace;
        }

        /* Custom styling for date group rows */
        .gridjs-tr.date-group-row {
            background-color: #eff6ff;
            border-top: 2px solid #2563eb;
        }

        .gridjs-tr.date-group-row td {
            font-weight: 600;
            padding: 12px 8px !important;
        }

        /* Subtle border for first product of date */
        .gridjs-tr:has(a[href*="/user/records/chart"]) {
            border-top: 2px solid #dbeafe;
        }

        /* Zebra striping for better readability */
        .gridjs-tr:not(.date-group-row):nth-child(even) {
            background-color: #f9fafb;
        }

        /* Hover effect */
        .gridjs-tr:not(.date-group-row):hover {
            background-color: #f3f4f6;
        }

        /* Mobile responsive adjustments */
        @media (max-width: 640px) {
            .gridjs-wrapper {
                font-size: 14px;
            }
        }
    </style>
</head>

<body class="bg-gray-200 text-gray-800">
    <%- include('includes/navbar.ejs') %>
        <main class="p-4 sm:p-10">

            <div id="wrapper"></div>

            <!-- Alert Notification Modal -->
            <section
                class="hidden top-5 left-1/2 z-[9999] fixed opacity-0 transition-all -translate-x-1/2 translate-y-4 duration-300 modal">
                <div
                    class="flex items-center bg-white shadow-lg p-4 border-red-500 border-l-8 rounded-2xl w-fit w-full sm:w-[90vw] overflow-hidden">
                    <div class="flex justify-center items-center bg-red-100 rounded-full size-14">
                        <svg class="size-7 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="ml-4">
                        <h5 class="font-semibold text-red-600 text-lg status_alert_heading"></h5>
                        <p class="text-gray-700 text-sm status_text"></p>
                    </div>
                </div>
            </section>
        </main>
</body>

<script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>

<script>
    // Configuration constants
    const CONFIG = {
        ITEMS_PER_PAGE: 30,
        TIMEZONE: "Asia/Kolkata",
        LOCALE: "en-IN"
    };

    // Helper function to format date
    function formatDate(dateString) {
        return new Date(dateString).toLocaleString(CONFIG.LOCALE, {
            timeZone: CONFIG.TIMEZONE,
            year: "numeric",
            month: "short",
            day: "numeric",
        });
    }

    // Helper function to get YYYY-MM-DD format
    function getDateForLink(dateString) {
        return new Date(dateString)
            .toLocaleDateString(CONFIG.LOCALE, {
                timeZone: CONFIG.TIMEZONE,
                year: "numeric",
                month: "2-digit",
                day: "2-digit",
            })
            .split("/")      // for locales like en-IN → "23/11/2025"
            .reverse()       // → ["2025","11","23"]
            .join("-");
    }

    // Sort data by date (newest first) then by product name
    function sortData(data) {
        return data.sort((a, b) => {
            const dateComparison = new Date(b.date) - new Date(a.date);
            return dateComparison !== 0 ? dateComparison : a.name.localeCompare(b.name);
        });
    }

    // Transform data into table rows with grouped dates
    function transformDataToRows(data) {
        const sortedData = sortData(data);
        const rows = [];
        let lastDate = null;
        let dailyTotal = 0;
        let isFirstProductOfDate = false;

        sortedData.forEach((entry, index) => {
            const formattedDate = formatDate(entry.date);
            const dateForLink = getDateForLink(entry.date);

            // Check if we're starting a new date group
            if (formattedDate !== lastDate) {
                // Add summary row for previous date if exists
                if (lastDate !== null) {
                    rows.push({
                        _type: 'summary',
                        date: '',
                        name: `Total for ${lastDate}`,
                        count: dailyTotal
                    });
                }

                lastDate = formattedDate;
                dailyTotal = 0;
                isFirstProductOfDate = true;
            }

            // Add product row (with date if first product)
            rows.push({
                _type: 'product',
                date: isFirstProductOfDate ? formattedDate : '',
                dateLink: isFirstProductOfDate ? dateForLink : '',
                name: entry.name,
                count: entry.count
            });

            dailyTotal += entry.count;
            isFirstProductOfDate = false;

            // Add summary for last date group
            if (index === sortedData.length - 1) {
                rows.push({
                    _type: 'summary',
                    date: '',
                    name: `Total for ${lastDate}`,
                    count: dailyTotal
                });
            }
        });

        return rows;
    }

    // Render table cells based on row type
    function renderRow(row) {
        if (row._type === 'summary') {
            return [
                '',
                gridjs.html(`<span class="font-semibold text-gray-600">${row.name}</span>`),
                gridjs.html(`<span class="font-bold text-blue-600">${row.count}</span>`)
            ];
        }

        // Product row (with or without date)
        const dateCell = row.date ? gridjs.html(`
            <a href="/user/records/chart?date=${row.dateLink}" 
            class="inline-flex items-center gap-2 font-semibold text-blue-600 hover:text-blue-800 hover:underline">
                ${row.date}
            </a>
        `) : '';

        return [
            dateCell,
            row.name,
            row.count
        ];
    }

    // Initialize Grid
    new gridjs.Grid({
        pagination: {
            limit: CONFIG.ITEMS_PER_PAGE
        },
        search: true,
        columns: [
            { name: "Date", width: "25%" },
            { name: "Product Name", width: "50%" },
            { name: "Production Count", width: "25%" }
        ],
        server: {
            url: '/user/records/data',
            then: data => {
                const rows = transformDataToRows(data);
                return rows.map(renderRow);
            }
        },
        style: {
            table: {
                'border-radius': '20px',
                'overflow': 'hidden'
            },
            th: {
                'background-color': '#2563eb',
                'color': '#fff',
                'border-bottom': '3px solid #1d4ed8',
                'text-align': 'center',
                'padding': '12px 8px',
                'font-weight': '600'
            },
            td: {
                'text-align': 'center',
                'padding': '10px 8px',
                'font-family': "'JetBrains Mono', monospace"
            }
        },
        className: {
            table: 'gridjs-table-custom'
        }
    }).render(document.getElementById("wrapper"));
</script>

</html>